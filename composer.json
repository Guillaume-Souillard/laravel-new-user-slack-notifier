{
  "name": "gsouillard/laravel-new-user-slack-notifier",
  "description": "A Laravel package to send Slack notifications on user registration.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Guillaume Souillard"
    }
  ],
  "require": {
    "php": "^8.1",
    "laravel/framework": "^10.0|^11.0",
    "guzzlehttp/guzzle": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "YourNamespace\\SlackNotifier\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "YourNamespace\\SlackNotifier\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "YourNamespace\\SlackNotifier\\SlackNotifierServiceProvider"
      ]
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "orchestra/testbench": "^8.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
